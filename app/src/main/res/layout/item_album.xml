<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:layout_margin="5dp"
    android:background="@color/colorPrimary"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/color_white"
    android:id="@+id/layout"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_tName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"/>

    <TextView
        android:id="@+id/textView_aName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toBottomOf="@id/tv_tName"
        app:layout_constraintStart_toEndOf="@id/imageView"/>
    <TextView
        android:id="@+id/textView_cName"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:textColor="@color/color_black"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_aName"
        app:layout_constraintStart_toEndOf="@id/imageView"/>

    <TextView
        android:id="@+id/textView_cDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/color_black"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/textView_cName" />

    <TextView
        android:id="@+id/textView_rDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toBottomOf="@id/textView_cDate"
        app:layout_constraintStart_toEndOf="@id/imageView"
        android:padding="5dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imagView_checkbox"
        android:clickable="true"
        android:src="@drawable/checkbox"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/textView_rDate"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>